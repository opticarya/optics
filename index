  <script>
    // Set current year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Simple "send" behaviour: open mail client with prefilled content
    function sendMail(){
      var name = document.getElementById('name').value || 'Message';
      var email = document.getElementById('email').value || '';
      var msg = document.getElementById('message').value || '';
      var subject = encodeURIComponent('Website message from ' + name);
      var body = encodeURIComponent(msg + '\n\n— Reply to: ' + email);
      window.location.href = 'mailto:you@example.com?subject=' + subject + '&body=' + body;
      return false;
    }

    // Optional: toggle theme based on user preference (prefers-color-scheme)
    (function(){
      try {
        var prefersLight = window.matchMedia && window.matchMedia('(prefers-color-scheme: light)').matches;
        if(prefersLight) document.documentElement.classList.add('light');
      } catch(e){}
    })();
  </script>
